<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= farm.name %>
    </title>
</head>

<body>
    <h1>
        <%= farm.name %>
    </h1>
    <ul>
        <li>
            City: <%= farm.city %>
        </li>
        <li>
            Email: <%= farm.email %>
        </li>
    </ul>
    <h2>Product:</h2>
    <ul>
        <% for(let product of farm.products) { %>
            <li>
                <a href="/products/<%= product._id %>">
                    <%= product.name %> - $<%= product.price %> / <%= product.category %>
                </a>
            </li>
            <% } %>
    </ul>
    <section style="display:flex;">
        <form action="/farms" style="margin-right: 10px;">
            <button>All Farms</button>
        </form>
        <form action="/farms/<%= farm._id %>/products/new" style="margin-right: 10px;">
            <button>Add Product</button>
        </form>
        <form action="/farms/<%= farm._id %>/edit" style="margin-right: 10px;">
            <button>Edit Farm</button>
        </form>
        <form action="/farms/<%= farm._id %>?_method=DELETE" method="POST">
            <button>Delete Farm</button>
        </form>
    </section>
</body>

</html>