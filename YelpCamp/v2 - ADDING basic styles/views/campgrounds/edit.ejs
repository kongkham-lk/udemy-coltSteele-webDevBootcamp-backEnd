<%- layout('layouts/boilerPlate') %>

<h1>Edit Campground</h1>
<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" name="title" id="title" value="<%= campground.title %>">    
    </div>
    <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" name="location" id="location"  value="<%= campground.location %>">    
    </div>
    <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input class="form-control" type="text" name="image" id="image"  value="<%= campground.image %>">    
    </div>
    <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group col-2 mb-3">
            <span class="input-group-text" id="price">$</span>
            <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" id="price" name="price"  value="<%= campground.price %>">
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" name="description" id="description"><%= campground.description %></textarea> 
    </div>
    <div class="mb-3">
        <button class="btn btn-info" >Update</button>
    </div>
</form>
<form action="/campgrounds/<%= campground._id %>">
    <div class="mb-3">
        <button class="btn btn-secondary" >Back</button>
    </div>
</form>
